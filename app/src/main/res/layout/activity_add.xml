<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEntryBuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entry Buku"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/etJudulBuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_book_24"
                android:drawablePadding="24dp"
                android:hint="Judul Buku"
                android:inputType="textCapSentences"
                />

            <EditText
                android:id="@+id/etHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="24dp"
                android:hint="Harga Buku"
                android:inputType="text|number"
                />

            <EditText
                android:id="@+id/etDekripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_description_24"
                android:drawablePadding="24dp"
                android:hint="Dekripsi Buku"
                android:inputType="textCapSentences"
                />
            <TextView
                android:id="@+id/tvBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                />
            <EditText
                android:id="@+id/etBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|number"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/etStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="Bayar"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="Update Data"
        android:visibility="gone"
        />

</RelativeLayout>